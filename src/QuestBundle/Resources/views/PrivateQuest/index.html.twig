{% extends '::Private/base.html.twig' %}

{% block content %}
   <div class="btn-toolbar" role="toolbar">
      <button type="button" class="btn btn-default _quest_add">
         <span class="glyphicon glyphicon-plus" aria-hidden="true">Добавить</span>
      </button>
   </div>
   <br />
   <div class="panel panel-default">
      <table class="table">
         {% for quest in quests %}
         <tr>
            <td>{{ quest.name }}</td>
            <td>{{ quest.title }}</td>
            <td>{{ quest.timeStart }}</td>
            <td>{{ quest.timeEnd }}</td>
            <td>{{ quest.color }}</td>

            <td>
               <div class="btn-group">
                  <button type="button" class="btn btn-default btn-xs _quest_edit" data-name="{{ quest.name }}">
                     <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                  </button>
                  <button type="button" class="btn btn-default btn-xs _quest_delete" data-name="{{ quest.name }}">
                     <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                  </button>
               </div>
            </td>
         </tr>
         {%  endfor %}
      </table>
   </div>

{% endblock %}