{% extends '::Private/base.html.twig' %}

{% block content %}
   <div class="btn-toolbar" role="toolbar">
      <button type="button" class="btn btn-default _article_add">
         <span class="glyphicon glyphicon-plus" aria-hidden="true">Добавить</span>
      </button>
   </div>
   <br />
   <div class="panel panel-default">
      <table class="table">
         {% for article in articles %}
         <tr>
            <td>{{ article.key }}</td>
            <td>{{ article.content|striptags|slice(0,100) }}</td>
            <td>
               <div class="btn-group">
                  <button type="button" class="btn btn-default btn-xs _article_edit" data-key="{{ article.key }}">
                     <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                  </button>
                  <button type="button" class="btn btn-default btn-xs _article_delete" data-key="{{ article.key }}">
                     <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                  </button>
               </div>
            </td>
         </tr>
         {% endfor %}
      </table>
   </div>
{% endblock %}